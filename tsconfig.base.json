{
  "compilerOptions": {
    /* build settings */
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*"],
      // FSD
      "@/app/*": ["./src/app/*"],  
      "@/process/*": ["./src/process/*"],
      "@/page/*": ["./src/page/*"],
      "@/widget/*": ["./src/widget/*"],
      "@/feature/*": ["./src/feature/*"],
      "@/entity/*": ["./src/entity/*"],
      "@/shared/*": ["./src/shared/*"],
      // CUSTOM
      "@/util/*": ["./src/util/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/style/*": ["./src/style/*"]
    },
    "incremental": true,
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}